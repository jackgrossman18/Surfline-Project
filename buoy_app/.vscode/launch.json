{
    "version":"0.2.0",     
    "configurations": [         
        {             
            "name": "Run mocha",             
            "type": "node",             
            "request": "launch",                         
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",             
            "stopOnEntry": false,             
            "args": ["test/server.test.js"],             
            "cwd": "${workspaceRoot}",             
            "runtimeExecutable": null,             
            "env": { "NODE_ENV": "development"}
        },
        {
            "name": "Test Server",
            "type": "node",
            "request": "launch",
            "stopOnEntry": false,
            "args": ["index.js"],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": { "NODE_ENV": "development" }
        }
    ] 
}